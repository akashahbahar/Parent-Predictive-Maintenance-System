{
  "openapi": "3.0.1",
  "info": {
    "title": "PredictiveMaintenance.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Inference": {
      "post": {
        "tags": [
          "Inference"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ModelInput"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ModelInput"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ModelInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ModelOutput"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ModelOutput"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ModelOutput"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
