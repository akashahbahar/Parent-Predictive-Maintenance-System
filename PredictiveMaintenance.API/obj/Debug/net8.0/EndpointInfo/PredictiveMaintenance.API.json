      "ModelInput": {
        "type": "object",
        "properties": {
          "machineID": {
            "type": "number",
            "format": "float"
          },
          "timestamp": {
            "type": "string",
            "nullable": true
          },
          "temperature_last": {
            "type": "number",
            "format": "float"
          },
          "vibration_last": {
            "type": "number",
            "format": "float"
          },
          "pressure_last": {
            "type": "number",
            "format": "float"
          },
          "runTimeHours_last": {
            "type": "number",
            "format": "float"
          },
          "temperature_mean": {
            "type": "number",
            "format": "float"
          },
          "temperature_std": {
            "type": "number",
            "format": "float"
          },
          "vibration_mean": {
            "type": "number",
            "format": "float"
          },
          "vibration_std": {
            "type": "number",
            "format": "float"
          },
          "vibration_rms": {
            "type": "number",
            "format": "float"
          },
          "vibration_spec_energy": {
            "type": "number",
            "format": "float"
          },
          "pressure_mean": {
            "type": "number",
            "format": "float"
          },
          "pressure_std": {
            "type": "number",
            "format": "float"
          }
        },
        "additionalProperties": false
      },
      "ModelOutput": {
        "type": "object",
        "properties": {
          "willFailWithin2h": {
            "type": "boolean"
          },
          "probability": {
            "type": "number",
            "format": "float"
          },
          "score": {
            "type": "number",
            "format": "float"
          }
        },
        "additionalProperties": false
      }
    }
  }
}